*				{ padding:0; margin:0; }
div,ul,ol,li,p,dl,dt,dd,strong,span,a,em,b,u,img,table,tr,th,td,form,fieldset,input,button,select,label,legend,caption,thead,tbody,tfoot,i,h1,h2,h3,h4,h5,h6	{ font-size:12px;
color:#000; "Noto Sans KR", Montserrat, "Malgun Gothic", Dotum, sans-serif; line-height:120%; vertical-align:middle; }

caption,
legend			{ width:0; height:0; overflow:hidden; font-size:0; line-height:0; }

ul,ol,li		{ list-style:none; }
em,i			{ font-style:normal; }

a				{ text-decoration:none; color:#000; }
a:hover,
a:focus			{ text-decoration:underline; color:#000; }
a:active,
a:visited		{ color:#000; }


.fl				{ float:left; }
.fr				{ float:right; }

.tl				{ text-align:left; }
